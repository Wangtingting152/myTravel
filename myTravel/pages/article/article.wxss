/* pages/article/article.wxss */

.swiper {
  width: 100%;
  height: 200px;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 搜素框样式 */

.search {
  margin-top: 10px;
  width: 80%;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.search_arr input {
  font-size: 12px;
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}

.sousuo {
  font-size: 13px;
  color: #999;
  margin-top: 10px;
  margin-left: 15rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}

.page_row {
  display: flex;
  flex-direction: row;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

/* 游记内容样式 */

.articleContent {
  width: 100%;
  margin-top: 5px;
  display: flex;
  flex-direction: column;
}

.articleContent_top {
  width: 100%;
  height: 25px;
  font-size: 13px;
  display: flex;
  flex-direction: row;
  background-color: #eee;
  justify-content: space-around;
  border-bottom: 1px solid #eee;
}

.topItem {
  width: 60px;
  height: 25px;
  text-align: center;
}

.active {
  border-bottom: 1px solid #ff7013;
}

.articleItem{
  width: 100%;
  align-items: center;
  margin-left: 1px;
  height: 130px;
  /* background-color: pink; */
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  /* margin-bottom:5px; */
  border-bottom:1px solid #eee;  
  font-size: 12px;
}

.articleImg{
  width: 120px;
  height: 110px;
  background-color: #ccc;
  position: relative;
 
}

.myArticleImg{
  width: 120px;
  height: 110px;
  position: absolute;
}

.articleInfor{
  width: 190px;
  height: 110px;
  margin-right: 5px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title{
  width: 190px;
  height: 18px;
  overflow: hidden;
 font-size: 13px;
 font-weight: bold;
 color: #333;
}

.myContent{
  width: 190px;
  height: 65px;
  overflow: hidden;
  color: #999;
}

.touristor{
  width: 190px;
  height: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #333;
  font-size: 12px;
}






